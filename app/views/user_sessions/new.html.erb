<div class="hero min-h-screen bg-cover" style="background-image: url(<%= asset_path('bg_image.jpg') %>);">
  <div class="hero-content flex-col border rounded bg-black mt-14 opacity-90">
    <div class="text-center mt-6">
      <h1 class="text-2xl md:text-3xl font-semibold py-3"><%= t '.title' %></h1>
    </div>
    <div class="card w-full md:w-96 shadow-2xl">
      <div class="card-body">
        <%= form_with url: login_path, local: true do |f| %>
          <div class="form-control">
            <%= f.label :email, User.human_attribute_name(:email)%>
            <%= f.text_field :email, class: 'input input-bordered text-gray-800 rounded bg-gray-300 mb-3 mt-1' %>
          </div>
          <div class="form-control my-2">
            <%= f.label :password, User.human_attribute_name(:password) %>
            <%= f.password_field :password, class: 'input input-bordered text-gray-800 rounded text-gray-800 bg-gray-300 mb-3 mt-1' %>
          </div>
          <div class="form-control my-4 pt-4">
            <%= f.submit (t 'defaults.login'), class: 'btn btn-primary rounded' %>
          </div>
          <div class="text-center mb-2">
            <p>パスワードをお忘れの方は<%= link_to "こちら", new_password_reset_path, class: "link" %></p>
          </div>
          <div class="text-center mp-6">--------------------or--------------------</div>
          <div class="mt-3">
            <!-- クライアントライブラリの読み込み 下記1行を追加 -->
            <script src="https://accounts.google.com/gsi/client" async defer></script>
            <!-- Googleログインボタンの表示 ここから追加 -->
            <div id="g_id_onload"
              data-client_id= <%= ENV['GOOGLE_CLIENT_ID'] %>
              data-login_uri="https://www.angrycard-generator.com/oauths/callback"
              data-auto_prompt="false">
            </div>
            <div class="g_id_signin flex justify-center bg-black"
              data-type="standard"
              data-size="large"
              data-theme="outline"
              data-text="sign_in_with"
              data-shape="rectangular"
              data-logo_alignment="left">
            </div>
            <!-- ここまで追加 -->
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>