<div class="hero min-h-screen bg-white bg-cover" style="background-image: url(<%= asset_path('bg_image.jpg') %>);">
  <div class="hero-content flex-col border rounded bg-black mt-16 opacity-90">
    <div class="text-center mt-6">
      <h1 class="text-2xl md:text-3xl font-bold"><%= t '.title' %></h1>
    </div>
      <div class="card flex-shrink-0 w-full md:w-96">
        <%= form_with model: @user, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-control mx-6">
          <%= f.label :name %>
          <%= f.text_field :name, class: "input input-bordered rounded text-gray-800 bg-gray-300 mb-2 mt-1" %>
        </div>
        <div class="form-control my-2 mx-6">
          <%= f.label :email %>
          <%= f.email_field :email, class: "input input-bordered rounded text-gray-800 bg-gray-300 mb-2 mt-1" %>
        </div>
        <div class="form-control my-2 mx-6">
          <%= f.label :password %>
          <%= f.password_field :password, class: "input input-bordered rounded text-gray-800 bg-gray-300 mb-2 mt-1" %>
        </div>
        <div class="form-control my-2 mx-6">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "input input-bordered rounded text-gray-800 bg-gray-300 mb-2 mt-1" %>
        </div>
        <div class="form-control py-3 mx-6 mb-2">
          <%= f.submit (t 'defaults.register'), class: "btn btn-primary rounded"%>
        </div>
        <div class="text-center mp-6">----------------------or----------------------</div>
          <div class="mt-3">
            <!-- クライアントライブラリの読み込み 下記1行を追加 -->
            <script src="https://accounts.google.com/gsi/client" async defer></script>
            <!-- Googleログインボタンの表示 ここから追加 -->
            <div id="g_id_onload"
              data-client_id= <%= ENV['GOOGLE_CLIENT_ID'] %>
              data-login_uri="http://localhost:3000/oauths/callback"
              data-auto_prompt="false">
            </div>
            <div class="g_id_signin flex justify-center bg-black"
              data-type="standard"
              data-size="large"
              data-theme="outline"
              data-text="sign_in_with"
              data-shape="rectangular"
              data-logo_alignment="left">
            </div>
            <!-- ここまで追加 -->
          </div>
        <% end %>
      
      </div>
  </div>
</div>