
<header class="navbar z-50 fixed top-0 left-0 right-0 bg-black h-20 opacity-80 flex justify-between">
  <div class="navber-start">
    <div class="dropdown visible md:hidden">
      <label tabindex="0" class="btn btn-ghost btn-circle">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" /></svg>
      </label>
      <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-56 text-base-content">
        <li><%= link_to '怒りの墓場', angry_cards_path, class: "btn btn-ghost lx:px-10" %></li>
        <li><%= link_to '召喚する', new_angry_card_path, class: "btn btn-ghost lx:px-10" %></li>
      </ul>
    </div>

    <div class="hidden md:inline-block grid justify-items-center mb-1">
      <%= link_to root_path do %>
      <%= image_tag 'logo3.png', width: 235 %>
      <% end %>
    </div>
  </div>

  <div class="navbar-center">
    <div class="visible md:hidden">
      <%= link_to root_path do %>
        <%= image_tag 'logo3.png', width: 235, class: "ml-4" %>
      <% end %>
    </div>
  </div>

  <div class="navbar-end">
    <div class="hidden md:inline-block">
      <ul class="flex justify-end">
        <li><%= link_to '怒りの墓場', angry_cards_path, class: "btn btn-ghost text-lg lx:px-10" %></li>
        <li><%= link_to '召喚する', new_angry_card_path, class: "btn btn-ghost text-lg mr-3 lx:px-10" %></li>
      </ul>
    </div>
    <div class="dropdown dropdown-end mt-2 mr-6">
      <label tabindex="0" class="btn btn-ghost btn-circle avatar">
        <div class="w-20 rounded-full">
          <% if current_user.avatar_url %>
            <%= image_tag current_user.avatar_url, size: "400x400" %>
          <% else %>
            <%= image_tag('user_sample.png', size: "400x400") %>
          <% end %>
        </div>
      </label>

      <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52 text-base-content">
        <li><%= link_to 'マイページ', my_page_path(current_user.id) %></li>
        <li><%= link_to (t 'defaults.logout'), logout_path, method: :delete %></li>
      </ul>
    </div>
    
  </div>
  
</header>